{
    "name": "architech-labs/basket-pricing",
    "description": "Basket pricing engine",
    "type": "project",
    "license": "MIT",
    "require": {
        "php": "^8.2"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.11",
        "phpunit/phpunit": "^10.5",
        "friendsofphp/php-cs-fixer": "^3.49"
    },
    "autoload": {
        "psr-4": {
            "ArchitechLabs\\Basket\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ArchitechLabs\\Basket\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "stan": "phpstan analyse",
        "fix": "php-cs-fixer fix --config=.php-cs-fixer.php"
    },
    "config": {
        "preferred-install": "dist",
        "sort-packages": true
    }
}
